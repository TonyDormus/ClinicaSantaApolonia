<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClinicaSantaApolonia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ClinicaSantaApolonia.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">ClinicaSantaApolonia</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                       

                        <!-- Mostrar opciones basadas en roles -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <ul class="navbar-nav ms-auto">
                                @if (User.IsInRole("Administrador"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link btn btn-outline-primary" asp-page="/ManageRoles">
                                            <i class="bi bi-person-check"></i> Gestionar Roles
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link btn btn-outline-primary" asp-page="/GestionUsuarios">
                                            <i class="bi bi-person-badge"></i> Gestion Usuarios
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link btn btn-outline-primary" asp-page="/ManageOdontologos">
                                            <i class="bi bi-person-badge"></i> Gestion Odontologos
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link btn btn-outline-primary" asp-page="/NotasTratamiento">
                                            <i class="bi bi-person-badge"></i> Tratamiento
                                        </a>
                                    </li>
                                  
                                }
                                @if (User.IsInRole("Recepcionista"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link btn btn-outline-success" asp-page="/GestionPacientes">
                                            <i class="bi bi-hospital"></i> Gestion Pacientes
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link btn btn-outline-success" asp-page="/GestionCitas">
                                            <i class="bi bi-calendar-check"></i> Gestión de Citas
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link btn btn-outline-success" asp-page="/Factura">
                                            <i class="bi bi-file-earmark-text"></i> Gestion Facturas
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link btn btn-outline-success" asp-page="/ManageHistorialMedico">
                                            <i class="bi bi-file-earmark-text"></i> Historial Medico
                                        </a>
                                    </li>
                                }
                                @if (User.IsInRole("Odontologo"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link btn btn-outline-info" asp-page="/CitasOdontologo">
                                            <i class="bi bi-calendar"></i> Mis Citas
                                        </a>
                                    </li>
                                   
                                
                                }

                                @if (User.IsInRole("Paciente"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link btn btn-outline-info" asp-page="/MisCitas">
                                            <i class="bi bi-calendar"></i> Mis Citas
                                        </a>
                                    </li>
                                }
                            </ul>
                        }

                    </ul>
                    <ul class="navbar-nav ms-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ClinicaSantaApolonia - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
